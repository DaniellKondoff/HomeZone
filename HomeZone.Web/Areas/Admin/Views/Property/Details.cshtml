            @Html.DisplayFor(model => model.RoomType)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Space)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Space)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price) $
