        <dt>
            @Html.DisplayNameFor(model => model.SecondaryImage)
        </dt>
        <dd>
            <img width="200" src="data:image/png;base64,@(Model.SecondaryImage != null ? Convert.ToBase64String(Model.SecondaryImage) : string.Empty)" alt="@Model.Title" />
